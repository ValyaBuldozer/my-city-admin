{
  "version": "3.4.5",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "lib": ["dom", "es2017"]
  },
  "include": [
    "./src/**/*"
  ]
}